{
    "env": {
        "browser": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "standard-with-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "project": "./tsconfig.json",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "react-hooks"
    ],
    "rules": {
        "@typescript-eslint/indent": [
            "error",
            4
        ],
        "@typescript-eslint/space-before-function-paren": [
            "error",
            {
                "asyncArrow": "always",
                "anonymous": "always",
                "named": "never"
            }
        ],
        "no-unused-vars": "off",
        "quotes": [
            "error",
            "single"
        ],
        "react-hooks/exhaustive-deps": [
            "error",
            {
                "additionalHooks": "(useAsyncMemo)"
            }
        ],
        "react-hooks/rules-of-hooks": "error",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ]
    }
}